    def Przyciski(self):
        self.p11 = Radiobutton(self)
        self.p11["text"] = "Hello World\n(click me)"
        self.p11["activebackground"] = "yellow"
        self.p11["bg"] = "blue"
        self.p11["fg"] = "white"
        self.p11["variable"] = wartosc
        self.p11["value"] = 1
        self.p11["command"] = self.Akcje
        self.p11.grid(row=1,column=0)

        self.p12 = Radiobutton(self)
