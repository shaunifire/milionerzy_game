    def wybor_kola_telefon(self):
            print("Cześć z tej strony Hubert Urbański twój przyjaciel właśnie gra w programie milionerzy i ma problem z pytaniem:\n",self.wybrany[0],"Oto możliwe odpowiedzi:\n",self.answers[int(self.wybrany[2])],"\n","Masz 30 sekund postaraj się podać prawdziwą odpowiedź!")
            print("Przyjaciel:Hmmm ymmm ummm myslę, że będzie to:",self.wybrany[1])
            telefon=False
    def wybor_kola_publicznosc(self):
            print("Oto jak na odpowiedzi do twojego pytania zagłosowała publiczność\n",)
            if self.answers[int(self.wybrany[2])][A]==self.wybrany[1]:
                self.prawdopodobienstwo_poprawnej_odpowiedzi=random.randint(61,95)
                print(self.wybrany[1],": ",self.prawdopodobienstwo_poprawnej_odpowiedzi,"%")
                self.prawdopodobienstwo_pozostalych_odpowiedzi=100-self.prawdopodobienstwo_poprawnej_odpowiedzi
                self.odjemna=random.randint(0,self.prawdopodobienstwo_pozostalych_odpowiedzi)
                self.prawdopodobienstwo_pozostalych_odpowiedzi=self.prawdopodobienstwo_pozostalych_odpowiedzi-self.odjemna
                print(self.answers[int(self.wybrany[2])][B],": ",self.odjemna,"%")
                self.odjemna=random.randint(0,self.prawdopodobienstwo_pozostalych_odpowiedzi)
                self.prawdopodobienstwo_pozostalych_odpowiedzi=self.prawdopodobienstwo_pozostalych_odpowiedzi-self.odjemna
                print(self.answers[int(self.wybrany[2])][C],": ",self.odjemna,"%")
                print(self.answers[int(self.wybrany[2])][D],": ",self.prawdopodobienstwo_pozostalych_odpowiedzi,"%")
            elif self.answers[int(self.wybrany[2])][B]==self.wybrany[1]:
                self.prawdopodobienstwo_poprawnej_odpowiedzi=random.randint(61,95)
                print(self.wybrany[1],": ",self.prawdopodobienstwo_poprawnej_odpowiedzi,"%")
                self.prawdopodobienstwo_pozostalych_odpowiedzi=100-self.prawdopodobienstwo_poprawnej_odpowiedzi
