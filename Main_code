    def wybor_kola_fifty_fifty(self):
            print("Uff masz 50% szans to czas na twój szczęśliwy strzał.\nPozostałe odpowiedzi to:")
            self.kolejnosc=random.randint(1,2)
            if self.kolejnosc == 1:
                self.poprawna_odpowiedz=self.wybrany[1]
                self.answers[int(self.wybrany[2])].remove(self.wybrany[1])
                self.druga_odpowiedz=random.randint(0,2)
                print(self.poprawna_odpowiedz,"lub",self.answers[int(self.wybrany[2])][self.druga_odpowiedz])
            else:
                self.poprawna_odpowiedz=self.wybrany[1]
                self.answers[int(self.wybrany[2])].remove(self.wybrany[1])
                self.druga_odpowiedz=random.randint(0,2)
                print(self.answers[int(self.wybrany[2])][self.druga_odpowiedz],"lub",self.poprawna_odpowiedz)
            fifty_fifty=False
            wybor_kola=""

