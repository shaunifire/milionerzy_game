    def Prawda(self):
        if wartosc.get()==1:
            messagebox.showinfo("","Prawidłowa Odpowiedź!")
        if wartosc.get()==2:
            messagebox.showinfo("","Prawidłowa Odpowiedź!")
        if wartosc.get()==3:
            messagebox.showinfo("","Prawidłowa Odpowiedź!")
        if wartosc.get()==4:
            messagebox.showinfo("","Zła Odpowiedź!")

    def Akcje(self):
